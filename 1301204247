# Rumus Luas Lingkaran (Muhammad Farisal Imtiyaz - 1301204247)

phi = 3.14
r = float (input ("Masukkan jari-jari lingkaran: "))
luas lingkaran = phi * r * r
print ("Luas lingkaran adalah : ", luas_lingkaran) 
print ()

# Rumus Luas Persegi (Muhammad Farisal Imtiyaz - 1301204247)

sisi = int (input ("Masukkan sisi: "))
luas persegi = sisi * sisi
print ("Luas persegi adalah : ", luas_persegi)
 print ()

